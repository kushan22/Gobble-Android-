<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivRecommendation"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/r_blr_by_shojo_food"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:id="@+id/llRecommendation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ivRecommendation"
            >

            <TextView
                android:id="@+id/tvRecommendationFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name Comes Here"
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/tvRecommendationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Address Comes Here"
                android:padding="5dp"
                android:textSize="16sp"

                android:layout_marginLeft="5dp"

                />

            <TextView
                android:id="@+id/tvRecommendationRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gobble Match 5/5"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="5dp"

                />




        </LinearLayout>


    <ImageButton
        android:id="@+id/ibGoogleMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivRecommendation"
        android:layout_below="@+id/llRecommendation2"
        android:src="@drawable/iconsgooglemaps"
        android:background="@android:color/transparent"
       />
        <ImageButton
            android:id="@+id/ibCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ibGoogleMap"
            android:layout_below="@+id/llRecommendation2"
            android:src="@drawable/iconsgooglecalendar"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"

            />


    </RelativeLayout>


</android.support.v7.widget.CardView>